<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="#ff000000">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.99">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/mainScreen"
            android:layout_weight="5.26" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lowerLeftSelect"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/side_buttons" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lowerRightSelect"
            android:src="@drawable/side_buttons" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeButton"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/home_button_big" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/arrowUpButton"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/arrow_up"
        android:background="#ff000000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/arrowLeftButton"
            android:src="@drawable/arrow_left"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="#ff000000" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/OKButton"
            android:src="@drawable/ok_button_big"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/arrowRightButton"
            android:src="@drawable/arrow_right"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="#ff000000" />
    </LinearLayout>

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/arrowDownButton"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/arrow_down"
        android:background="#ff000000" />
</LinearLayout>

<ImageButton
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/powerButton"
android:layout_gravity="center_vertical|top"
android:src="@drawable/power"
    android:contentDescription="PowerButton"
    android:layout_marginTop="100dp" />
</LinearLayout>